@{
    Layout = "~/Views/Admin/_Admin_Layout.cshtml";
}
@using AlbumForU.Models
@model Topic
<div class="card">
    <div class="card-header"><h3>Topic Edition</h3></div>
    <div class="card-body">
        <form method="post">
            <input hidden name="Id" value="@Model.Id"/>
            <div class="form-group">
                <label for="Name">You can edit the name of this topic</label>
                <input class="form-control" name="Name" value="@Model.Name" required type="text" />
            </div>
            <div class="form-group">
                <button class="form-control" type="submit">Save</button>
            </div>
        </form>
    </div>
</div>
