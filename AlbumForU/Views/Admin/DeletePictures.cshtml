@{
    Layout = "~/Views/Admin/_Admin_Layout.cshtml";
}
@using AlbumForU.Models
@model Picture
<div class="card">
    <div class="alert-danger">
        @Html.ValidationSummary()
    </div>
    <div class="card-header">
        <h3>Delete the picture</h3>
    </div>
    <div class="card-body">
        <h3>Are you sure? All comments will be deleted too!</h3>
        <br />
        <br />
        <a href="~/Admin/DeletePictures/Agree/@Model.Id" class="btn btn-danger">DELETE</a>
    </div>
</div>